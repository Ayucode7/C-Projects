#include<stdio.h>
#include<math.h>
void print_menu();
double Add(double, double);
double Subtract(double,double);
double Multiply(double,double);
double Division(double,double);
double Modulo(int,int);
double Power(double ,double);
int main(){
   int choice;
   double first,second,result;
    while(1){
        print_menu();
        scanf("%d",&choice);
        if(choice==7){
        printf("\"Bye ByeðŸ‘‹ðŸ‘‹ðŸ‘‹ðŸ‘‹ðŸ‘‹\"");
        printf("\nCode Written by Ayushi Singh");
        break;
        }
        if(choice<1||choice>7){
            fprintf(stderr,"Invalid Choice\nPlease Choice Again\n");
            continue;
        }
        printf("\"Please Enter the first number\":\n");
        scanf("%lf",&first);
        printf("\"Now,Enter the second number\":\n");
        scanf("%lf",&second);
        switch(choice){
            case 1 :
            result = Add(first,second);
            break;
            case 2 :
            result = Subtract(first,second);
            break;
            case 3 :
            result = Multiply(first,second);
            break;
            case 4 :
            result = Division(first,second);
            break;
            case 5 :
            result = Modulo(first,second);
            break;
            case 6 :
            result= pow(first,second);
        }
        if(!isnan(result)){
        printf("=================================\n");
        printf("Result is: %0.5lf\n",result);
        printf("=================================\n");
        }
    }
    return 0;
}
double Add(double a, double b){
    return a+b;
}
double Subtract(double a,double b){
    return a-b;
}
double Multiply(double a, double b){
    return a*b;
}
double Division(double a, double b){
    if(b==0){
        fprintf(stderr,"Invalid Arugument for Division\n");
        return NAN;
    }
    else{
        return a/b;
    }
}
double Modulo(int a, int b){
    if(b==0){
        fprintf(stderr,"Invalid Argument for Modular\n");
        return NAN;
    }
    else{
        return a%b;
    }
}
double Power(double a ,double b){
    if(b<0){
       fprintf(stderr,"Invalid Argument for Power operation\n");
    }
    else{
    return pow(a,b);
    }
}
 void print_menu(){
    printf("#---------------------------------------------------#");
    printf("\n###-----Welcome to My Simple Calculator-----###");
    printf("\nChoose one of the following options:-");
    printf("\n1. Add (\"+\")");
    printf("\n2. Subtract (\"-\")");
    printf("\n3. Multiply (\"*\")");
    printf("\n4. Division (\"/\")");
    printf("\n5. Modulo (\"%\")");
    printf("\n6. Power (\"^\")");
    printf("\n7. Exit (\"Bye Bye\")\n");
}
